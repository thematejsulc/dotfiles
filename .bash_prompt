# Git Functions
git_branch() {
	git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# Terminal Prompt
PS1="\[\e[0;93m\]\u\[\e[m\]" # Username string
PS1+=" " # Space
PS1+="\[\e[0;95m\]\W\[\e[m\]" # Current directory
PS1+="\[\e[0;92m\]\$(git_branch)\[\e[m\]" # Current branch
PS1+=" " # Space
export PS1;
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

